<% layout('layouts/boilerplate')%>

<!-- Stylesheet for this page only -->
<style>
    body {
        background-color: #f8f9fa;
    }
    
    .login-container {
        min-height: 80vh;
    }
    
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2) !important;
        background-color: #212529;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3) !important;
    }
    
    .card-img-top {
        height: 200px;
        object-fit: cover;
        filter: brightness(0.8);
        transition: filter 0.5s, transform 0.5s;
    }
    
    .card:hover .card-img-top {
        filter: brightness(1);
        transform: scale(1.03);
    }
    
    .card-body {
        padding: 2rem;
        color: #f8f9fa;
    }
    
    .card-title {
        color: #ffffff;
        font-weight: 600;
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 1.75rem;
        position: relative;
        padding-bottom: 12px;
    }
    
    .card-title:after {
        content: '';
        position: absolute;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #198754, #20c997);
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
    }
    
    .form-label {
        color: #adb5bd;
        font-weight: 500;
    }
    
    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        background-color: #2b3035;
        border: 1px solid #495057;
        color: #e9ecef;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        background-color: #343a40;
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
        color: #ffffff;
    }
    
    .btn-success {
        border-radius: 8px;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
        background: linear-gradient(90deg, #198754, #20c997);
        border: none;
        box-shadow: 0 4px 10px rgba(25, 135, 84, 0.3);
        transition: all 0.3s;
    }
    
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(25, 135, 84, 0.4);
        background: linear-gradient(90deg, #157347, #1aa179);
    }
    
    .btn-block {
        width: 100%;
    }
    
    .valid-feedback {
        color: #20c997;
    }
    
    /* Animation for card entrance */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translate3d(0, 30px, 0);
        }
        to {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }
    }
    
    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out forwards;
    }
    
    /* Password toggle */
    .password-toggle-wrap {
        position: relative;
    }
    
    .password-toggle {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
        z-index: 10;
    }
    
    .password-toggle:hover {
        color: #adb5bd;
    }
    
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1.5rem 0;
        color: #6c757d;
    }
    
    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #495057;
    }
    
    .divider::before {
        margin-right: 1rem;
    }
    
    .divider::after {
        margin-left: 1rem;
    }
    
    .social-login {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }
    
    .social-btn {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.3s;
        background-color: #343a40;
        color: #fff;
    }
    
    .social-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #adb5bd;
    }
    
    .register-link a {
        color: #20c997;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }
    
    .register-link a:hover {
        color: #198754;
        text-decoration: underline;
    }
</style>

<div class="container d-flex justify-content-center align-items-center mt-5 login-container">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow animate-fade-in">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3 password-toggle-wrap">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <span class="password-toggle" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </span>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember" style="background-color: #2b3035; border-color: #495057;">
                                <label class="form-check-label" for="remember" style="color: #adb5bd;">
                                    Remember me
                                </label>
                            </div>
                            <a href="/forgot-password" style="color: #20c997; text-decoration: none; font-size: 0.9rem;">Forgot password?</a>
                        </div>
                        
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                    
                    <div class="divider">or continue with</div>
                    
                    <div class="social-login">
                        <button class="social-btn">
                            <i class="bi bi-google"></i>
                        </button>
                        <button class="social-btn">
                            <i class="bi bi-facebook"></i>
                        </button>
                        <button class="social-btn">
                            <i class="bi bi-twitter"></i>
                        </button>
                    </div>
                    
                    <div class="register-link">
                        Don't have an account? <a href="/register">Register here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Script for password visibility toggle -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');
        
        if (togglePassword && password) {
            togglePassword.addEventListener('click', function() {
                // Toggle type attribute
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                
                // Toggle icon
                this.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';
            });
        }
    });
</script>